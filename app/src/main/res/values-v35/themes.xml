<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Theme for Android 15+ with proper edge-to-edge support -->
    <style name="Theme.Socrates" parent="android:Theme.Material.NoActionBar">
        <!-- Edge-to-edge configuration for Android 15+ -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:enforceStatusBarContrast">false</item>
        <item name="android:enforceNavigationBarContrast">false</item>
        <!-- Android 15+ uses enableEdgeToEdge() API instead of deprecated cutout modes -->
    </style>
</resources>
