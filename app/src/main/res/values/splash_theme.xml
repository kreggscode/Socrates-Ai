<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Splash Screen Theme for Socrates App - Instant transition -->
    <style name="Theme.Socrates.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#0A0E27</item>
        <!-- No icon, instant transition -->
        <item name="windowSplashScreenAnimationDuration">1</item>
        <item name="android:windowSplashScreenBrandingImage">@null</item>
        <item name="postSplashScreenTheme">@style/Theme.Socrates</item>
        <!-- Removed deprecated statusBarColor and navigationBarColor -->
        <!-- These are now handled by enableEdgeToEdge() in SplashActivity -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
</resources>
